{
  "name": "PHP & MySQL Codespace",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "app",
  "workspaceFolder": "/var/www/html",
  "forwardPorts": [80, 3306],
  "postCreateCommand": "bash -c \"if [ -f dump.sql ]; then mysql -u devuser -pdevpass -h db mydatabase < dump.sql; fi\"",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "bmewburn.vscode-intelephense-client",
        "ikappas.phpcs"
      ]
    }
  }
}
